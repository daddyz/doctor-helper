- content_for :devise_header do
  = t('views.devise.sessions.new.header')
- content_for :devise_body do
  = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    .form-group
      = f.label :email
      = f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'email@example.com'
    .form-group
      = f.label :password
      = f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: '1@a2!d3#f'
    - if devise_mapping.rememberable?
      .checkbox
        = f.label :remember_me do
          = f.check_box :remember_me
          = t('views.devise.sessions.new.form.remember_me')

    = f.submit t('views.devise.sessions.new.form.submit'), class: 'btn btn-primary'
